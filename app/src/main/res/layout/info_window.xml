<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!--android:background="@color/bg_color" -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_source"
            android:layout_width="@dimen/ico_Info_width_height"
            android:layout_height="@dimen/ico_Info_width_height"
            android:src="@drawable/ic_urban_observatory" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <!--  <ImageView
              android:layout_width="@dimen/ico_Info_width_height"
              android:layout_height="@dimen/ico_Info_width_height"
              android:src="@drawable/ic_urban_observatory" />
  -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:text=" "
        android:padding="@dimen/activity_element_space"
        android:background="@color/colorPrimary"
        android:id="@+id/textViewLine"/>

    <LinearLayout
        android:id="@+id/layoutTime"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="left"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/ico_Info_width_height"
            android:layout_height="@dimen/ico_Info_width_height"
            android:src="@drawable/ic_time" />

        <TextView
            android:id="@+id/tv_time"
            android:paddingLeft="@dimen/activity_element_space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="left"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/ico_Info_width_height"
            android:layout_height="@dimen/ico_Info_width_height"
            android:src="@drawable/ic_distance" />

        <TextView
            android:id="@+id/tv_distance"
            android:paddingLeft="@dimen/activity_element_space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:text=" "
        android:padding="@dimen/activity_element_space"
        android:background="@color/colorPrimary"/>

    <LinearLayout
        android:id="@+id/layoutTempHumidity"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/ico_Info_width_height"
            android:layout_height="@dimen/ico_Info_width_height"
            android:src="@drawable/ic_temp" />

        <TextView
            android:id="@+id/tv_temp"
            android:paddingLeft="@dimen/activity_element_space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="@dimen/ico_Info_width_height"
            android:layout_marginLeft="@dimen/activity_element_space"
            android:layout_height="@dimen/ico_Info_width_height"
            android:src="@drawable/ic_humidity" />

        <TextView
            android:id="@+id/tv_humidity"
            android:paddingLeft="@dimen/activity_element_space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutPressureSound"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/ico_Info_width_height"
            android:layout_height="@dimen/ico_Info_width_height"
            android:src="@drawable/ic_pressure" />

        <TextView
            android:id="@+id/tv_pressure"
            android:paddingLeft="@dimen/activity_element_space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="@dimen/ico_Info_width_height"
            android:layout_height="@dimen/ico_Info_width_height"
            android:layout_marginLeft="@dimen/activity_element_space"
            android:src="@drawable/ic_sound" />

        <TextView
            android:id="@+id/tv_sound"
            android:paddingLeft="@dimen/activity_element_space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_endText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>